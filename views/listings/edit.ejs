<% layout('/layouts/boilerplate') %>

<div class="form-container">
    <h2>Edit the Listing</h2>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" required>
            <div class="valid-feedback">Title looks good</div>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" name="listing[description]" value="<%= listing.description %>" required>
            <div class="invalid-feedback">Please enter short description</div>
        </div>

        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" name="listing[price]" value="<%= listing.price %>" required>
            <div class="invalid-feedback">Please enter valid price</div>
        </div>

        <div class="mb-3">
            Original Image <br>
            <img src="<%= originalImageUrl  %>" alt="past image">
        </div>

        <div class="form-group">
            <label for="image">Upload New Image</label>
            <input name="listing[image]" type="file">
        </div>

        <div class="form-group">
            <label for="location">Location</label>
            <input type="text" name="listing[location]" value="<%= listing.location %>" required>
            <div class="invalid-feedback">Please enter valid location</div>
        </div>

        <div class="form-group">
            <label for="country">Country</label>
            <input type="text" name="listing[country]" value="<%= listing.country %>" required>
            <div class="invalid-feedback">Please enter valid country name</div>
        </div>

        <button class="btn-submit">Save Changes</button>
    </form>
</div>
<script src="/js/script.js"></script>
